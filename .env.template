# Environment Variables Template
# Copy to .env and fill in your values

# ============================================================================
# NCBI ENTREZ API
# ============================================================================
NCBI_EMAIL=your-email@example.com
NCBI_API_KEY=

# ============================================================================
# DEBUG & DEMO MODE
# ============================================================================
DEBUG=false
DEMO_MODE=false
LOG_LEVEL=INFO

# ============================================================================
# STREAMLIT
# ============================================================================
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501

# ============================================================================
# LANCEDB
# ============================================================================
# Uncomment to use custom LanceDB path (default: data/vectors/lancedb)
# LANCEDB_URI=/path/to/lancedb

# ============================================================================
# TAXONKIT
# ============================================================================
# Set if TaxonKit database is in non-standard location
# TAXONKIT_DB_DIR=/path/to/taxonkit_db
